<main>
    <form class="search" action="/search" method="POST">
        <input type="search" placeholder="Search here..." name="type">
        <button type="submit">Search</button>
    </form>
    <section id="find-section">

        {{#each results}}
            <div class="card">
                <h3>{{this.name}}</h3>
                <p>{{this.description}}</p>
                <div class="cta-container"><a href="/housing/{{this._id}}" class="det-link">Details</a></div>
                <div class="card_circle"><img src="{{this.homeImage}}"></div>
            </div>
        {{else}}
            <!-- If there are no search matches, show: -->
            <div class="no-data-listing">
                <p class="no-offer">No match was found for the submitted type...</p>
            </div>
        {{/each}}


    </section>
</main>